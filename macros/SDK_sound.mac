.ifndef SDK_SOUND_MAC

	;======================================================================
	;				Sound Macros
	;======================================================================

	;----------------------------------------------------------------------
	;
	; usage:
	;	oups
	;
	;
	; Call XOUPS function
	;
	;----------------------------------------------------------------------
	.macro oups
			.byte	$00, XOUPS
	.endmacro

	;----------------------------------------------------------------------
	;
	; usage:
	;	ping
	;
	;
	; Call XPING function
	;
	;----------------------------------------------------------------------
	.macro ping
			.byte	$00, XPING
	.endmacro

	;----------------------------------------------------------------------
	;
	; usage:
	;	shoot
	;
	;
	; Call XSHOOT function
	;
	;----------------------------------------------------------------------
	.macro shoot
			.byte	$00, XSHOOT
	.endmacro

	;----------------------------------------------------------------------
	;
	; usage:
	;	explode
	;
	;
	; Call XEXPLO function
	;
	;----------------------------------------------------------------------
	.macro explode
			.byte	$00, XEXPLO
	.endmacro

	;----------------------------------------------------------------------
	;
	; usage:
	;	zap
	;
	;
	; Call XZAP function
	;
	;----------------------------------------------------------------------
	.macro zap
			.byte	$00, XZAP
	.endmacro

	SDK_SOUND_MAC = 1
.endif
